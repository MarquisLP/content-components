{
  "extends": "brightspace/lit-config",
  "ignorePatterns": ["coverage/**/*"],
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "requireConfigFile": false
  },
  "globals": {
    "Prism": false
  },
  "rules": {
    "object-curly-spacing": "off",
    "sort-imports": "off",
    "no-console": "warn",
    "lit/no-template-arrow": "off"
  },
  "env": {
    "mocha": true
  }
}
